    "version": "0.2.0",
    "configurations": [
         {
            "name": "Launch game",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/.run/game",
            "args": ["-url","gumix@localhost:8080/ws/y7/"],
            "externalConsole": true,
            "cwd": "/",

            "stopAtEntry": false,
            "environment": [],
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
